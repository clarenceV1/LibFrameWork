<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/shape_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textColor="@color/title_color"
            android:textSize="15sp"
            tools:text="标题" />

        <LinearLayout
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxHeight="212dp"
                android:textColor="@color/dialog_content"
                android:textSize="13sp"
                tools:text="您确定要删除么？" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/item_line_color" />

        <LinearLayout
            android:id="@+id/rlTwoBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_left_btn"
                android:gravity="center"
                android:textColor="@color/dialog_btn_cancle"
                android:textSize="15sp"
                tools:text="取消" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/item_line_color" />

            <TextView
                android:id="@+id/btn_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_right_btn"
                android:gravity="center"
                android:textColor="@color/dialog_btn_ok"
                android:textSize="15sp"
                tools:text="确定" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_dialog_one"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/selector_dialog_one_btn"
            android:gravity="center"
            android:textColor="@color/dialog_btn_ok"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="确定"
            tools:visibility="visible" />
    </LinearLayout>

</RelativeLayout>